# Jervis Kubernetes Secrets Template
# ==================================
# Copy this file to secrets.yaml and fill in your actual values:
#   cp secrets.yaml.template secrets.yaml
#
# NEVER commit secrets.yaml to git!
#
apiVersion: v1
kind: Secret
metadata:
  name: jervis-secrets
  namespace: jervis
type: Opaque
stringData:
  # Database passwords
  MONGODB_PASSWORD: "your_mongodb_password"
  ARANGO_PASSWORD: "your_arango_password"

  # LLM API Keys
  # Anthropic: https://console.anthropic.com/settings/keys
  ANTHROPIC_API_KEY: "sk-ant-api03-..."

  # OpenAI: https://platform.openai.com/api-keys
  OPENAI_API_KEY: "sk-proj-..."

  # Google AI: https://aistudio.google.com/app/apikey
  GOOGLE_API_KEY: "AIza..."

  # JetBrains Junie (optional)
  JUNIE_API_KEY: "your_junie_key"

  # Atlassian token (for basic auth, optional if using OAuth2)
  ATLASSIAN_TOKEN: "your_atlassian_token"

---
apiVersion: v1
kind: Secret
metadata:
  name: jervis-oauth2-secrets
  namespace: jervis
type: Opaque
stringData:
  # GitHub OAuth2
  # Create OAuth App at: https://github.com/settings/developers
  # Authorization callback URL: https://your-domain/oauth2/callback
  GITHUB_CLIENT_ID: "Ov23li..."
  GITHUB_CLIENT_SECRET: "your_github_secret"

  # GitLab OAuth2
  # Create OAuth App at: https://gitlab.com/-/profile/applications
  # Redirect URI: https://your-domain/oauth2/callback
  # Scopes: api, read_user, read_repository
  GITLAB_CLIENT_ID: "your_gitlab_client_id"
  GITLAB_CLIENT_SECRET: "gloas-..."

  # Bitbucket OAuth2
  # Create OAuth Consumer at: https://bitbucket.org/YOUR_WORKSPACE/workspace/settings/oauth-consumers/new
  # Callback URL: https://your-domain/oauth2/callback
  # Permissions: Account: Read, Repositories: Read
  BITBUCKET_CLIENT_ID: "your_bitbucket_key"
  BITBUCKET_CLIENT_SECRET: "your_bitbucket_secret"

  # Atlassian OAuth2 (Jira + Confluence)
  # Create OAuth App at: https://developer.atlassian.com/console/myapps/
  # Callback URL: https://your-domain/oauth2/callback
  # Permissions: Jira (read:jira-work, read:jira-user), Confluence (read:confluence-space.summary, read:confluence-content.all)
  ATLASSIAN_CLIENT_ID: "your_atlassian_client_id"
  ATLASSIAN_CLIENT_SECRET: "ATOA..."
