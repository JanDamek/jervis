        {
          "expr": "histogram_quantile(0.95, sum(rate(kb_rag_ingest_duration_seconds_bucket{operation=\"total\"}[5m])) by (le))",
          "legendFormat": "Total (p95)",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(kb_rag_ingest_duration_seconds_bucket{operation=\"embed\"}[5m])) by (le))",
          "legendFormat": "Embed (p95)",
          "refId": "B"
