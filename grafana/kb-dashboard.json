        {
          "expr": "histogram_quantile(0.95, sum(rate(kb_rag_ingest_duration_seconds_bucket{operation=\"weaviate_write\"}[5m])) by (le))",
          "legendFormat": "Weaviate Write (p95)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        }
      }
    },
